<!DOCTYPE html> <html lang="es"> <head> <meta charset="UTF-8"> <title>Edad y Clasificación</title> <style> .niño { color: purple; } .adolescente { color: green; } .adulto { color: orange; } .mayor { color: blue ; } </style> </head> <body> <h2>Ingresa tus datos</h2> <label>Nombre: <input type="text" id="nombre"></label><br> <label>Año de nacimiento: <input type="number" id="anioNacimiento"></label><br> <button onclick="mostrarMensaje()">Enviar</button> <div id="resultado"></div> <script> function mostrarMensaje() { const nombre = document.getElementById('nombre').value; const anio = parseInt(document.getElementById('anioNacimiento').value); const anioActual = new Date().getFullYear(); const edad = anioActual - anio; let categoria = ''; let clase = ''; if (edad >= 0 && edad <= 12) { categoria = 'Niño'; clase = 'niño'; } else if (edad >= 13 && edad <= 17) { categoria = 'Adolescente'; clase = 'adolescente'; } else if (edad >= 18 && edad <= 59) { categoria = 'Adulto'; clase = 'adulto'; } else if (edad >= 60) { categoria = 'Mayor'; clase = 'mayor'; } else { categoria = 'Edad inválida'; } const resultado = document.getElementById('resultado'); resultado.className = clase; resultado.textContent = Hola ${nombre}, tienes ${edad} años y eres un(a) ${categoria}.; } </script> </body> </html>